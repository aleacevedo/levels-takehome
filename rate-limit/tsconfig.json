{
  "compilerOptions": {
    "lib": ["esnext"],
    "strictNullChecks": true,
    "module": "commonjs",
    "target": "es2017",
    "allowJs": true,
    "typeRoots": ["./node_modules/@types"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "include": ["./*"]
}
